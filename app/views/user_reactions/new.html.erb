<% if @user_reaction.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user_reaction.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @user_reaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

