<h1>Reactions#new</h1>
<p>Find me in app/views/reactions/new.html.erb</p>

<% if @reaction.errors.any? %>
  <div id="error_explanation">
    <h2><%= @reaction.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @reaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<table>
  <thead>
    <th></th>
  </thead>
  <tbody>
  <%= form_with model: @reaction, url: reactions_path, method: :post do |f| %>
  <tr>
  <td>
    <div class="field">
      <%= f.label :name, "Name" %>
      <%=f.text_field :name%>
    </div>
  </td>
  </tr>
  <tr>
  <td>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  </td>
  </tr>
  </tbody>
  <% end %>
</table>

